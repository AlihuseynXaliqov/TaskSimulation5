@model List<Agent>

@{
    int count = 1;
}
<div class="container">
<div>
    <a asp-action="Create" class="btn btn-primary" role="button">Create</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Image</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@count</th>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <img width="100" height="100" src="~/Upload/Agent/@item.ImageUrl"/>
                    </td>
                    <td>
                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary" role="button">Update</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary" role="button">Delete</a>
                    </td>
                </tr>
                count++;
            }
        </tbody>
    </table>
</div>
</div>